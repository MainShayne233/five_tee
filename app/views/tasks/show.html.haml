%h1= @task.title

%p= @task.desc
%p= @task.due_date
%p= @task.started_at
%p
  Duration: #{distance_of_time_in_words_to_now(@task.duration.to_i.seconds.ago)}


= link_to 'Edit this task', edit_task_path(@task), class: 'btn btn-primary'
= link_to 'Delete this task', @task, method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }, class: 'btn btn-danger'