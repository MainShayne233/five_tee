/ Modal
#newModal.modal.fade{:role => "dialog"}
  .modal-dialog
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} &times;
        %h4.modal-title New Task
      .modal-body#new-modal-body
        = render 'form'
      .modal-footer
        = yield :save_button
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close