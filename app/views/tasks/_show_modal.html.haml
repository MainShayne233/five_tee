/ Modal
#showModal.modal.fade{:role => "dialog"}
  .modal-dialog
    / Modal content
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"} &times;
        %h4.modal-title= @task.title
      .modal-body#show-modal-body
        %p= "Description: #{@task.desc}"
        %p= "Due date: #{@task.due_date.to_s}"
        %p= "Created at: #{@task.created_at}"
        %p= "Completed at: #{@task.completed_at}"
        %p= "Duration: #{duration_display(@task.duration)}"
        %span= link_to 'Edit', {action: "edit_modal", format: :js, remote: true, task: @task}, class: 'btn btn-primary'
        %span=  link_to 'Delete', "/tasks/#{@task.id}", class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure you want to delete this task?' }
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close